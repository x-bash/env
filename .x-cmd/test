# shellcheck shell=sh disable=SC1072 #source

xws install
___X_CMD_XRC_MODULE_IMPORTED=
advise rm ___x_cmd_env_main
xrc env
x log env

case $1 in
    python)
        . "$(x wsroot)/.x-cmd/testcases/python"
        # TODO: Check if this version is available in your system
        x env install python py38_4.10.1
        # x env uninstall python py38_4.10.1
        # x env current
        x env exec python py38_4.10.1 -V
        ;;
    node)
        x env install node
        x env use node
        x env current node
       x env exec node -v
        ;;
    java)
        x env install java
        x env use java
        x env current
        x env exec java -version
        ;;
    *)
        echo "Usage: x test python|node|java"
        ;;
esac