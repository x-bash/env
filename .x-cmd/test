# shellcheck shell=sh disable=SC1072 #xsh

xws install
___X_CMD_XRC_MODULE_IMPORTED=
advise rm ___x_cmd_env
xrc env

case $1 in
    python)
        . "$(x wsroot)/.x-cmd/testcases/python"
        x env install python
        # x env use python
        # x env current
        # x env exec python -V
        ;;
    node)
        x env install node
        x env use node
        x env current
        x env exec node -v
        ;;
    java)
        x env install java
        x env use java
        x env current
        x env exec java -version
        ;;
    *)
        echo "Usage: x test python|node|java"
        ;;
esac